<script type="text/javascript">

function colormix(){document.getElementById('colorcode').value="#";
	var a=[1,2,3,4,5,6,7,"8",9,0,"a","b","c","d","e","f"];
	for(var i=0;i<6;i++){
		var colormix=Math.floor(Math.random()*16);
		var e=a[colormix];
		var code=document.getElementById('colorcode').value+=e;
}
document.getElementById('colorcode').value=code;
document.getElementById('colorcode').style.background=code;}
function codechecker(){
	var colorcode=document.getElementById('codecolor').value;
	document.getElementById("codecolor").style.background=colorcode;
}
function colormix2(){document.getElementById('colorcode2').value="rgb(";
	var a=[];
	for(var i=255;i>-1;i--){
		a[i]=i;};
		var u=[3,4];
		var v=Math.floor(Math.random()*2);
		for(var i=0;i<u[v];i++){
			var colormix=Math.floor(Math.random()*256);
		var e=a[colormix];
		var code=document.getElementById('colorcode2').value+=e+",";}
var len=eval(code.length-1);
var nwcod=code.slice(0,len);
document.getElementById('colorcode2').value=nwcod+")";
document.getElementById('colorcode2').style.background=nwcod;}
function codechecker2(){
	var colorcode=document.getElementById('codecolor2').value;
	document.getElementById("codecolor2").style.background=colorcode;
}

